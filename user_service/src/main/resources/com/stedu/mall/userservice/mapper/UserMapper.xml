<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.stedu.mall.userservice.mapper.UserMapper">
    <insert id="insert" parameterType="user" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO `user`(`username`, `password`, `pay_password`, `salt`, `realname`, `sex`, `id_card`, `phone`, `email`, `reg_time`, `money`, `status`)
        VALUES (#{username}, #{password}, #{payPassword}, #{salt}, #{realname}, #{sex}, #{idCard}, #{phone}, #{email}, #{regTime}, #{money}, #{status})
    </insert>
    <insert id="insert1">
        INSERT INTO `user`(`username`, `password`, `pay_password`, `salt`, `isOldPwdVerified`)
        VALUES (#{username}, #{password}, #{payPassword}, #{salt}, #{isOldPwdVerified})
    </insert>
    <update id="update">
        UPDATE `user`
        <set>
            <if test="username!=null and username.length>0">
                `username`=#{username},
            </if>
            <if test="password!=null and password.length>0">
                `password`=#{password},
            </if>
            <if test="payPassword!=null and payPassword.length>0">
                `pay_password`=#{payPassword},
            </if>
            <if test="salt!=null and salt.length>0">
                `salt`=#{salt},
            </if>
            <if test="realname!=null and realname.length>0">
                `realname`=#{realname},
            </if>
            <if test="sex!=null and sex.length>0">
                `sex`=#{sex},
            </if>
            <if test="idCard!=null and idCard.length>0">
                `id_card`=#{idCard},
            </if>
            <if test="phone!=null and phone.length>0">
                `phone`=#{phone},
            </if>
            <if test="email!=null and email.length>0">
                `email`=#{email},
            </if>
            <if test="regTime!=null">
                `reg_time`=#{regTime},
            </if>
            <if test="money!=null">
                `money`=#{money},
            </if>
            <if test="status!=null">
                `status`=#{status},
            </if>
        </set>
        WHERE `id`=#{id}
    </update>
    <update id="setStatus">
        UPDATE `user` SET `status`=#{status} WHERE `id`=#{id}
    </update>
    <update id="updatePwd">
        UPDATE `user`
        <set>
            <if test="password!=null and password.length>0">
                `password`=#{password},
            </if>
            <if test="isOldPwdVerified!=null">
                `isOldPwdVerified`=#{isOldPwdVerified},
            </if>
        </set>
        WHERE `id`=#{id}
    </update>
    <update id="updatePay">
        UPDATE `user`
        <set>
            <if test="payPassword!=null and payPassword.length>0">
                `pay_password`=#{payPassword},
            </if>
            <if test="isOldPwdVerified!=null">
                `isOldPwdVerified`=#{isOldPwdVerified},
            </if>
        </set>
        WHERE `id`=#{id}
    </update>
    <update id="updateMoney">
        UPDATE `user`
        <set>
            <if test="money!=null">
                `money`=#{money},
            </if>
        </set>
        WHERE `id`=#{id}
    </update>
    <update id="payUpdate">
        UPDATE `user`
        <set>
            <if test="money!=null">
                `money`=#{money},
            </if>
        </set>
        WHERE `id`=#{id}
    </update>
    <delete id="delete">
        DELETE FROM `user` WHERE `id`=#{id}
    </delete>
    <select id="selectById" resultType="user">
        SELECT * FROM `user` WHERE `id`=#{id}
    </select>
    <select id="selectByCondition" resultType="user">
        SELECT * FROM `user`
        <where>
            <if test="username!=null and username.length>0">
                AND `username` LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="status!=null">
                AND `status`=#{status}
            </if>
        </where>
    </select>
    <select id="selectAll" resultType="user">
        SELECT * FROM `user`;
    </select>
    <select id="selectByUserName" resultType="user">
        SELECT * FROM `user` WHERE `username`=#{username};
    </select>
</mapper>